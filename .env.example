# API Keys (Required - add at least one)
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# Model Configuration
DEFAULT_PROVIDER=claude  # Options: claude, openai, deepseek, gemini

# Temperature Settings
TEMPERATURE_CREATIVE=0.8
TEMPERATURE_ANALYTICAL=0.2
TEMPERATURE_STANDARD=0.5

# Performance Settings
MAX_RETRIES=3
REQUEST_TIMEOUT=60
USE_CACHE=true
USE_BATCH=false

# Vector Database Settings (for RAG - optional for now)
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=INFO